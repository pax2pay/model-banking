{
	"compilerOptions": {
		"outDir": "dist/mjs",
		"module": "ESNext",
		"target": "ESNext",
		"lib": [
			"ESNext",
			"webworker"
		],
		"moduleResolution": "node10",
		"declaration": true,
		"sourceMap": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"allowJs": true,
		"resolveJsonModule": true,
		// "strict": true,
		"alwaysStrict": true,
		"allowSyntheticDefaultImports": true,
		"noImplicitAny": true,
		"removeComments": true,
		"preserveConstEnums": true,
		"forceConsistentCasingInFileNames": true,
		"noImplicitThis": true,
		"strictNullChecks": true,
		"types": [
			"vitest/globals",
			"./global.d.ts"
		]
	},
	"include": [
		"**/*.spec.ts",
	],
	"files": [
		"index.ts"
	],
	"typeAcquisition": {
		"enable": true
	}
}
